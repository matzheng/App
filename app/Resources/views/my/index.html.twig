        <div class="demo-block">
            <ul class="ui-list ui-list-link ui-border-tb">
                <!--style="  background:#ff7900;-->
                <li style=" background: url(images/bg011.jpg) no-repeat; background-size:cover;color:#FFF;height:150px;">
                    
                        <div class="ui-avatar" style=" margin:50px 15px 25px 20px">
                            <span style="background-image:url({{data.face}})"></span>
                        </div>
                        <div class="ui-list-info ui-border-t" style=" height:150px;">
                            <a href="{{path('myprofilepage')}}" style='color:#FFF'>
