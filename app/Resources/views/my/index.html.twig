                </a>
            </div>
        -->
            <div class="ui-btn-wrap">
                <a class="ui-btn-lg ui-btn-primary" href="{{ path('applyexpertpage') }}">
                    成为安知认证董事
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function(){
            $(".ui-icon-close").click(function(){
                window.localStorage.setItem('/my/hideresult', '1');
                $('.ui-tooltips-cnt').css('display','none');
            });

            if(window.localStorage && window.localStorage.getItem('/my/hideresult') == '1')
                $('.ui-tooltips-cnt').css('display','none');
        })
    </script>
{% endblock %}