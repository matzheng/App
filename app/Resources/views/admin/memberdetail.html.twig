{%extends 'admincontentbase.html.twig'%}

{%block content%}
<div class="row-fluid">
	<div class="block">
	    <div class="navbar navbar-inner block-header">
	        <div class="muted pull-left">{{member.uname}} | {{member.mobile}} 的提问</div>
	    </div>
	    <div class="block-content collapse in">
	    	<table class="table table-hover table-bordered" id="mytable">
	            <thead>
	                <tr>
	                    <th>#</th>
	                    <th>标题</th>
	                    <th>详情</th>
	                    <th>分类</th>
	                    <th>时间</th>
	                </tr>
	            </thead>
	            <tbody>
	            	{%for d in questions%}
	            	<tr>
	            		<td>{{d.tid}}</td>
	            		<td>{{d.title}}</td>
	            		<td>{{d.detail}}</td>
	            		<td>{{d.tags}}</td>
	            		<td>{{d.createtime | date('Y-m-d')}}</td>
	            	</tr>
	            	{%endfor%}
	            </tbody>
	        </table>
	    </div>
	</div>
</div>
{%endblock%}

{%block javascripts%}
<script>
$(document).ready(function(){
    $('#mytable').DataTable();
});
</script>
{%endblock%}