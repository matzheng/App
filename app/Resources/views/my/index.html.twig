                            <li class="ui-col ui-flex ui-flex-pack-center"><div class="myli"><span style=" color: #F90; font-size:1.3rem;">{{ zans }}</span><br>赞/次</div></li>
                            <li class="ui-col ui-flex ui-flex-pack-end"><div class="myli"><span style=" color: #0C0; font-size:1.3rem;">{{ answers }}</span><br>回答/个</div></li>
                        </ul>
                    </div>
                </div>
            </ul>
        </div>

        <div class="demo-block" style=" margin-top:0.5rem;">
            <ul class="ui-list ui-list-one ui-list-link ui-border-tb">
                <li class="ui-border-t" >
                    <div class="ui-list-thumb">
                        <span class="iconfont"  style="font-size:1.2rem; text-align: right;color: #F90;">&#xe620;</span>
                    </div>
                    <a href="{{path('mypartmentpage')}}" class="ui-list-info">
                        <h4 class="ui-nowrap">私董会咨询</h4>
                        <div class="ui-txt-info">{{sdh}}</div>
                    </a>
                </li>
                <li class="ui-border-t">
                    <div class="ui-list-thumb">
                        <span class="iconfont"  style="font-size:1.2rem; text-align: right; color: #f74c31;">&#xe600;</span>
                    </div>
                    <a class="ui-list-info" href="{{ path('myanswers') }}">
                        <h4 class="ui-nowrap">我的问答</h4>
                        <div class="ui-reddot ui-reddot-static"></div>
                    </a>
                </li>
                <li class="ui-border-t" >
                    <div class="ui-list-thumb">
                        <span class="iconfont"  style="font-size:1.2rem; text-align: right; color: #C00;">&#xe60e;</span>
                    </div>
                    <a class="ui-list-info" href="{{ path('myfav') }}">
                        <h4 class="ui-nowrap">我的收藏</h4>
                        <div class="ui-txt-info">{{ favs }}</div>
                    </a>
                </li>
            </ul>
        </div>

        <div class="ui-btn-wrap" style="text-align:center;">
            <!--    <button class="ui-btn-lg ui-btn-primary alert-text">
